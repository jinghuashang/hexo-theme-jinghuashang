.header {
  display: flex
  height: 60px
  align-items: baseline
  justify-content: space-between
  background-color: #222

  .blog-title .logo {
    color: #AAA;
    font-size: 20px;
    margin-left: 20px;
    text-decoration: none;
  }

  .menu {
    margin: 0;
    padding: 0;

    .menu-item {
      display: inline-block;
      margin-right: 10px;
    }

    .menu-item-link {
      color: #AAA;
      text-decoration: none;

      &:hover {
        color: #368CCB;
      }
    }
  }
}
